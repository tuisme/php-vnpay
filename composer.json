{
    "name": "tuisme/php-vnpay",
    "type": "library",
    "description": "Thư viện hổ trợ tích hợp cổng thanh toán VNPay.",
    "keywords": [
        "php",
        "vnpay",
        "payment",
        "vietnam-payment",
        "payment-gateway",
        "vietnam-payment-gateway"
    ],
    "homepage": "https://github.com/tuisme/php-vnpay",
    "license": "MIT",
    "authors": [
        {
            "name": "Tu",
            "email": "tuisme@gmail.com"
        }
    ],
    "require": {
        "php": "^7.4|^8",
        "omnipay/common": "^3.0"
    },
    "require-dev": {
        "http-interop/http-factory-guzzle": "^1.2",
        "omnipay/tests": "^4.0",
        "scrutinizer/ocular": "^1.5",
        "php-http/guzzle7-adapter": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Omnipay\\VNPay\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Omnipay\\VNPay\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "\"vendor/bin/phpunit\""
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
	}
}
